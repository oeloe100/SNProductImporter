@model SNPIDataManager.Models.PreLoginModel

<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card register-card">
            <div class="card-header">
                <h3>Sign In</h3>
            </div>
            <div class="card-body center-block">
                @using (Html.BeginForm("_Register", "Register", FormMethod.Post))
                {
                    <div class="input-group form-group">
                        <div id="no-bg" class="input-group-prepend">
                            <span id="fa-custom" class="input-group-text"><i class="fas fa-user">Username</i></span>
                        </div>
                        @Html.EditorFor(Model => Model._RegisterModel.Email)
                    </div>
                    <div class="input-group form-group">
                        <div id="no-bg" class="input-group-prepend">
                            <span id="fa-custom" class="input-group-text"><i class="fas fa-key">Password</i></span>
                        </div>
                        @Html.PasswordFor(Model => Model._RegisterModel.Password)
                    </div>
                    <div class="input-group form-group">
                        <div id="no-bg" class="input-group-prepend">
                            <span id="fa-custom" class="input-group-text"><i class="fas fa-key">Confirm Password</i></span>
                        </div>
                        @Html.PasswordFor(Model => Model._RegisterModel.ConfirmPassword)
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn float-right login_btn">
                    </div>
                }
            </div>
            <div class="errContainer">
                @Html.ValidationMessage("LoginErrMessage") <br />
                @Html.ValidationMessage("LoginErrDescription")
            </div>
        </div>
    </div>
</div>
